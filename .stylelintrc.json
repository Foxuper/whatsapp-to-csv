{
	"plugins": [
		"@stylistic/stylelint-plugin"
	],
	"extends": [
		"stylelint-config-standard",
		"@stylistic/stylelint-config",
		"stylelint-config-standard-vue"
	],
	"rules": {
		"at-rule-no-unknown": [
			true,
			{
				"ignoreAtRules": [
					"tailwind"
				]
			}
		],
		"@stylistic/indentation": [
			"tab",
			{
				"baseIndentLevel": 1
			}
		],
		"@stylistic/no-missing-end-of-source-newline": null
	}
}